<section>
    <div class="container">
        <div class="row mt-4">
            <a class="btn btn-success ml-auto" href="/admin/add-products">Add products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td> <img src="{{this.imageUrl}}" alt="Loading" style="width: 50px;"> </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>